{
  "name": "esy-libpng",
  "version": "1.6.37000",
  "description": "libpng-1.6.37 packaged for esy",
  "esy": {
    "buildsInSource": true,
    "exportedEnv": {
      "PKG_CONFIG_PATH": {
        "scope": "global",
        "val": "#{self.lib / 'pkgconfig' :  }"
      }
    },
    "build": [
      [
        "chmod",
        "755",
        "./configure"
      ],
      [
        "bash",
        "-c",
        "./configure CFLAGS=$CFLAGS LDFLAGS='$LDFLAGS' --prefix=$cur__install #{os == 'windows' ? '--host=x86_64-w64-mingw32' : ''}"
      ],
      [
        "make"
      ],
      [
        "make",
        "install"
      ]
    ]
  },
  "dependencies": {
    "esy-zlib": "esy-packages/esy-zlib#404929fd8b7ed83ed6a528d751840faff957b4b3"
  },
  "resolutions": {}
}
